}
#nav3{
    display: flex;
    align-items: center;
gap: 30px;   
}

#nav3 a::before {
    content: "";
    position: absolute;
    background-color: white;
    top: 0px;
    left: 0;
    right: 0;
    bottom: 0px;
    z-index: -1;
    transform: scaleX(0);
    transform-origin: left;
    transition: all 0.8s;
  }
#nav3 a:hover::before {
    transform: scaleX(1);
  }

button h4{
    text-transform: capitalize;
   font-weight: 600;
